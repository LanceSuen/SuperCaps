#NoEnv  ; Recommended for performance and compatibility with future AutoHotke releases.
; #Warn  ; Enable warnings to assist with detecting common errors.
SendMode Input  ; Recommended for new scripts due to its superior speed and reliability.
SetWorkingDir %A_ScriptDir%  ; Ensures a consistent starting directory.

CapsLock & q::
   Send, {- down}{- up}
Return

CapsLock & w::
   Send, {+ down}{+ up}
Return

CapsLock & e::
   Send, {= down}{= up}
Return

CapsLock & r::
    Send, {[ down}{[ up}
Return

CapsLock & t::
    Send, {] down}{] up}
Return

CapsLock & Y::
    Send, {{ down}{{ up}
Return

CapsLock & u::
    Send, {} down}{} up}
Return

CapsLock & i::
    Send, {| down}{| up}
Return
CapsLock & o::
    Send, {( down}{( up}
Return

CapsLock & p::
    Send, {) down}{) up}
Return


CapsLock & a::
    Send, {/ down}{/ up}
Return

CapsLock & s::
    Send, {\ down}{\ up}
Return

CapsLock & d::
    Send, {? down}{? up}
Return

CapsLock & f::
    Send, {' down}{' up}
Return

CapsLock & g::
    Send, {" down}{" up}
Return

CapsLock & h::
   Send, {Left down}{Left up}
Return

CapsLock & j::
   Send, {Down down}{Down up}
Return

CapsLock & k::
   Send, {Up down}{Up up}
Return

CapsLock & l::
   Send, {Right down}{Right up}
Return

CapsLock & `;::
   Send, {`; down}{`; up}
Return

CapsLock & '::
   Send, {' down}{' up}
Return

CapsLock & Enter::
    Send, {Enter down}{Enter up}
Return


CapsLock & z::
   Send, {& down}{& up}
Return

CapsLock & x::
   Send, {* down}{* up}
Return

CapsLock & c::
   Send, {< down}{< up}
Return

CapsLock & v::
   Send, {> down}{> up}
Return

CapsLock & b::
    Send, {; down}{; up}
Return

CapsLock & n::
    Send, {: down}{: up}
Return

CapsLock & m::
    Send, {, down}{, up}
Return

CapsLock & ,::
    Send, {. down}{. up}
Return






